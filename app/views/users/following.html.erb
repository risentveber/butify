<div class='wrap-profile'>
  <%= render "profile_user" %>
  <div class='menu'>
    <ul>
      <li>
        <span><%= @user.posts.count %></span>
        <%= link_to user_path(@user) do %>
          Публикации
        <% end %>
      </li>
      <li>
        <span><%= @user.get_voted(Post).count %></span>
        <%= link_to favourite_user_path(@user) do %>
          Нравится
        <% end %>
      </li>
      <li class='active'>
        <span><%= @user.follow_count %></span>
        <%= link_to following_user_path(@user) do %>
          <% if @user != current_user %>
            Читает
          <% else %>
            Я читаю
          <% end %>
        <% end %>
      </li>
      <li>
        <span><%= @user.followers_count %></span>
        <%= link_to followers_user_path(@user) do %>
          <% if @user != current_user %>
            Читатели
          <% else %>
            Меня читают
          <% end %>
        <% end %>
      </li>
    </ul>
  </div>
</div>
<div class='card-butify center-block602'>
  <div class="card-title">
    <% if @user != current_user %>
      <p>Читает</p>
    <% else %>
      <p>Я читаю</p>
    <% end %>
  </div>
  <div class="usual-list border-b-radius">
    <div class = 'followers'>
      <% @user.all_following.each do |u|%>
      <div class = 'follower'>
        <div class="follower-user-button">
          <div class='follower-user'>
            <div class="preview-object">
                <div class="preview-object-avatar" style="background: url(
                <%= u.avatar.thumb %>
                ) no-repeat; background-size: cover;">
                </div>
                <div class="preview-object-info">
                  <div class="object-text">
                    <div class="object-maintext">
                      <%= link_to u.name, user_path(u)%>
                    </div>
                  </div>
                </div>
            </div>
            <div class="clearboth">
            </div>
          </div>
          <div class = 'follower-button'>
            <%= link_to 'Не читать', unfollow_user_path(u),
                method: :post,
                class: 'btn btn-primary btn-st btn-reject-follow',
                data: { toggle: 'tooltip', placement: 'bottom' } if current_user == @user %>
          </div>
        </div>
        <div class="clearboth">
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
<%= render "partials/contacts" %>



