div class="tips-and-comments title-under-hat"
  |
    
= react_component 'StaticPostForm',
  url: post_path(@post),
  post: { post_type: 'photo',
          author: {name: @post.user.name,
                    url: user_path(@post.user),
                    avatar: @post.user.avatar.to_s},
          city_id: @post.user.city_id,
          time: l(@post.created_at),
          title: @post.title,
          city_name: @post.user.city.try(:name),
          sitelink: @post.sitelink,
          text: @post.text,
          price: @post.price,
          discount_price: @post.discount_price,
          tags: @post.tags.map(&:name),
          category_ids: @post.categories.map(&:id),
          photos: @post.photos.map() do |p| {id: p.id, url: p.url} end,
  }
